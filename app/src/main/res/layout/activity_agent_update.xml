<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelexperts.temobile.AgentUpdateActivity">

    <RelativeLayout
        android:layout_width="525dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <!-- Agent First Name -->
        <RelativeLayout
            android:id="@+id/relativeLayout1a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="42dp">

            <TextView
                android:id="@+id/lblFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="First Name"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout1a"
            android:layout_alignBottom="@+id/relativeLayout1a"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/relativeLayout1a">

            <EditText
                android:id="@+id/txtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentFirstName"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Middle Initial -->
        <RelativeLayout
            android:id="@+id/relativeLayout2a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout1a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblMiddleInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Middle Initial"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout2a"
            android:layout_alignBottom="@+id/relativeLayout2a"
            android:layout_alignStart="@+id/relativeLayout1b">

            <EditText
                android:id="@+id/txtMiddleInitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentMiddleInitial"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Last Name -->
        <RelativeLayout
            android:id="@+id/relativeLayout3a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Last Name"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout3a"
            android:layout_alignBottom="@+id/relativeLayout3a"
            android:layout_alignStart="@+id/relativeLayout2b">

            <EditText
                android:id="@+id/txtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentLastName"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Bus Phone -->
        <RelativeLayout
            android:id="@+id/relativeLayout4a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout3a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblBusPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Bus. Phone"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout4a"
            android:layout_alignBottom="@+id/relativeLayout4a"
            android:layout_alignStart="@+id/relativeLayout3b">

            <EditText
                android:id="@+id/txtBusPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentBusPhone"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Email -->
        <RelativeLayout
            android:id="@+id/relativeLayout5a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout4a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Email"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout5a"
            android:layout_alignBottom="@+id/relativeLayout5a"
            android:layout_alignStart="@+id/relativeLayout4b">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentEmail"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Position -->
        <RelativeLayout
            android:id="@+id/relativeLayout6a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout5a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Position"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout6a"
            android:layout_alignBottom="@+id/relativeLayout6a"
            android:layout_alignStart="@+id/relativeLayout5b">

            <EditText
                android:id="@+id/txtPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentPosition"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Agent Agency -->
        <RelativeLayout
            android:id="@+id/relativeLayout7a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout6a"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/lblAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Agency"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout7b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout7a"
            android:layout_alignBottom="@+id/relativeLayout7a"
            android:layout_alignStart="@+id/relativeLayout6b">

            <EditText
                android:id="@+id/txtAgency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="AgentAgency"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout8a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/relativeLayout7b"
            android:layout_alignStart="@+id/relativeLayout7a">

            <Button
                android:id="@+id/btnPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASSWORD" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout8b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout8a"
            android:layout_alignBottom="@+id/relativeLayout8a"
            android:layout_alignStart="@+id/relativeLayout7b">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE DETAILS" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
